# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip
require File.join(
  File.dirname(
    Pod::Executable.execute_command('node', ['--print', 'require.resolve("expo/package.json")']).strip
  ),
  "scripts/autolinking"
)

platform :ios, min_ios_version_supported
prepare_react_native_project!

# Never build React as a dynamic framework (avoids "class implemented in both React.framework and CompanionApp.debug.dylib").
# If USE_FRAMEWORKS is set, force static linkage only.
if ENV['USE_FRAMEWORKS']
  Pod::UI.puts "Configuring Pod with static frameworks (dynamic would cause duplicate RCTSwiftUI class).".green
  use_frameworks! :linkage => :static
end

target 'CompanionApp' do
  use_expo_modules!
  # Explicit pod so Piper TTS is always linked (avoids autolinking-only dependency)
  pod 'PiperTts', :path => '../plugins/piper-tts'

  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    # Optional: enable espeak-ng phonemization in Piper TTS (requires app to link libespeak-ng, e.g. SPM espeak-ng-spm)
    if ENV['PIPER_USE_ESPEAK'] == '1'
      installer.pods_project.targets.each do |target|
        if target.name == 'PiperTts'
          target.build_configurations.each do |config|
            config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
            config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'PIPER_ENGINE_USE_ESPEAK=1'
          end
        end
      end
    end
  end
end
